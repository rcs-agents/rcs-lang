{
  "name": "@rcs-lang/csm",
  "version": "0.2.1",
  "description": "Lightweight conversation state machine for RCS agents",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
