{
  "name": "@rcs-lang/parser",
  "version": "0.5.0",
  "description": "ANTLR grammar for RCL",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "private": false,
  "imports": {
    "#generated/*": "./src/generated/*",
    "#*": "./src/*"
  },
  "scripts": {
    "build": "moon run parser:build",
    "dev": "moon run parser:dev",
    "test": "moon run parser:test",
    "test:watch": "moon run parser:test-watch",
    "test:coverage": "moon run parser:test-coverage",
    "typecheck": "moon run parser:typecheck",
    "clean": "moon run parser:clean",
    "lint": "moon run parser:lint",
    "format": "moon run parser:format"
  },
  "dependencies": {
    "@rcs-lang/ast": "workspace:*",
    "@rcs-lang/core": "workspace:*",
    "antlr4ng": "^3.0.16"
  },
  "devDependencies": {
    "antlr-ng": "^1.0.10",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
