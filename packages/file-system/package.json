{
  "name": "@rcs-lang/file-system",
  "version": "0.4.0",
  "private": false,
  "description": "File system abstraction for RCL",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "./dist/browser.js",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/browser.d.ts",
        "default": "./dist/browser.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "default": "./dist/browser.js"
    },
    "./node": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "moon run file-system:build",
    "dev": "moon run file-system:dev",
    "test": "moon run file-system:test",
    "test:watch": "moon run file-system:test-watch",
    "test:coverage": "moon run file-system:test-coverage",
    "typecheck": "moon run file-system:typecheck",
    "clean": "moon run file-system:clean",
    "lint": "moon run file-system:lint",
    "format": "moon run file-system:format"
  },
  "dependencies": {
    "@rcs-lang/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
