{
  "extends": "../../tsconfig.esm.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "useDefineForClassFields": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "**/*.stories.tsx", "**/*.stories.ts", "**/*.test.ts", ".storybook"]
}
