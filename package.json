{
  "name": "rcl-monorepo",
  "version": "0.4.0",
  "type": "module",
  "author": {
    "name": "Saulo Vallory",
    "email": "saulo@tokilabs.io",
    "url": "https://tokilabs.io/"
  },
  "repository": "https://github.com/rcs-agents/rcs-lang",
  "description": "RCL Language Monorepo - ANTLR4 parser and language tools",
  "engines": {
    "bun": ">=1.2.0"
  },
  "packageManager": "bun@1.2.18",
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*"
  ],
  "license": "MIT",
  "dependencies": {
    "@antfu/ni": "^25.0.0",
    "@rcs-lang/cli": "workspace:*"
  },
  "private": true,
  "scripts": {
    "setup": "./scripts/setup.sh",
    "build": "moon run :build",
    "dev": "moon run :dev",
    "test": "moon run :test",
    "clean": "moon run :clean",
    "lint": "moon run :lint",
    "format": "moon run :format",
    "typecheck": "moon run :typecheck",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status",
    "check:workspace": "bun scripts/check-workspace-deps.js",
    "check:pre-release": "bun scripts/pre-release-check.js",
    "version": "changeset version",
    "release:prepare": "bun run check:pre-release && bun run check:workspace && moon run ':build' --query 'project!=docs' && bun run test && changeset version && bun update",
    "release:commit": "git add .changeset packages/*/package.json package.json bun.lock CHANGELOG.md && git commit -m 'chore: version packages'",
    "release:publish": "bun run check:workspace && for dir in packages/*/; do (cd \"$dir\" && bun publish --access public) || true; done",
    "release:push": "git push --follow-tags",
    "release": "bun run release:prepare && bun run release:commit && bun run release:publish && bun run release:push",
    "act": "act",
    "act:ci": "act -W .github/workflows/ci.yml",
    "act:push": "act push",
    "act:pr": "act pull_request",
    "act:list": "act -l",
    "publish:extension": "cd apps/extension && bun run publish:marketplace",
    "publish:extension:package": "cd apps/extension && bun run vsce:package",
    "publish:extension:dry": "cd apps/extension && bun run vsce:publish:dry",
    "docs:build": "moon run docs:build",
    "docs:dev": "moon run docs:dev",
    "docs:preview": "moon run docs:preview"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@playwright/test": "^1.58.0",
    "@types/chai": "^5.2.3",
    "@types/jest-image-snapshot": "^6.4.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.1.0",
    "@types/sinon": "^17.0.4",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@wdio/cli": "^9.23.2",
    "@wdio/local-runner": "^9.23.2",
    "@wdio/mocha-framework": "^9.23.2",
    "@wdio/spec-reporter": "^9.23.2",
    "chai": "^5.3.3",
    "jest-image-snapshot": "^6.5.1",
    "mocha": "^11.7.5",
    "playwright": "^1.58.0",
    "sinon": "^21.0.1",
    "wdio-vscode-service": "^6.1.4",
    "webdriverio": "^9.23.2"
  }
}
